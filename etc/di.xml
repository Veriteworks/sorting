<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Magento\Catalog\Model\Config\Source\ListSort">
        <plugin
                name="add_direction_to_options"
                type="MageSuite\Sorting\Plugin\Catalog\Model\Config\Source\ListSort\AddDirectionToOptions"
        />
    </type>

    <type name="Magento\Catalog\Model\Category\Attribute\Source\Sortby">
        <plugin
                name="add_direction_to_options"
                type="MageSuite\Sorting\Plugin\Catalog\Model\Category\Attribute\Source\Sortby\AddDirectionToOptions"
        />
    </type>
    <type name="Magento\Catalog\Model\Category">
        <plugin sortOrder="1" name="mageSuiteSortingCategory"
                type="MageSuite\Sorting\Plugin\Catalog\Model\Category\ReplaceAvailableSortByOptions"
        />
    </type>

    <preference for="Magento\Catalog\Block\Product\ProductList\Toolbar"
                type="MageSuite\Block\Product\ProductList\Toolbar"
    />
</config>